{
  "name": "@un/designsystem-example",
  "version": "1.18.2",
  "description": "WFP UI Kit Example",
  "license": "Apache-2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:react": "cd packages/react && yarn start",
    "build": "lerna run build --stream --prefix --npm-client yarn",
    "build:all": "yarn build && cd packages/react && yarn build-storybook",
    "publish:alpha": "lerna publish --dist-tag alpha",
    "publish": "lerna publish",
    "test": "jest"
  },
  "keywords": [
    "WFP",
    "World Food Programme",
    "UN",
    "United Nations",
    "react",
    "ui-kit",
    "components"
  ],
  "resolutions": {
    "ast-types": "^0.14.0",
    "node-sass": "^6.0.0",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-is": "~16.9.0",
    "react-test-renderer": "~16.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-proposal-export-namespace-from": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/runtime": "^7.14.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/dom": "^7.26.6",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^13.1.9",
    "@un/cli": "10.25.15",
    "all-contributors-cli": "^6.19.0",
    "cross-env": "^5.2.0",
    "cross-spawn": "^6.0.5",
    "eslint": "^7.31.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.4",
    "husky": "^4.0.10",
    "in-publish": "^2.0.0",
    "jest": "^27.0.5",
    "jest-junit": "^10.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^9.5.0",
    "node-gyp": "^7.1.2",
    "prettier": "^2.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^3.0.0",
    "stylelint": "^13.13.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ],
      "scope-case": [
        0,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test",
          "style"
        ]
      ]
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint"
    ],
    "**/*.scss": [
      "prettier --write",
      "stylelint --report-needless-disables --report-invalid-scope-disables --allow-empty-input"
    ],
    "!(*sass).md": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-carbon/internal"
    ]
  },
  "stylelint": {
    "extends": [
      "./config/stylelint-config-carbon"
    ]
  }
}